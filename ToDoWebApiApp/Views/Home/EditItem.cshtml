@model ToDoWebApiApp.Models.TodoItem

@{
	ViewData["Title"] = "EditItem";
}

<h2>EditItem</h2>

<h4>TodoItem</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="EditItem">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="TotoItemId" />
			<input type="hidden" asp-for="TodoTask.TodoTaskId" name="TodoTaskId" value="@Model.TodoTask.TodoTaskId" />
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-default" />
				<a asp-action="Index" class="btn btn-default">Cancel</a>
			</div>
		</form>
	</div>
</div>
@section css {
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" type="text/css">
}
@section Scripts {
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}